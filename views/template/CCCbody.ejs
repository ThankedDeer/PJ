          seleccionado.Contraseña=document.getElementById('contraseña').value;
          /* console.log(vendedorr +" "+ usuarioo +" "+ contraseñaa); */
          axios.post('http://localhost:3000/api/usuario', seleccionado)
          .then((response)=>{
            alert("usuario agregado correctamente")
            document.getElementById('usuario').value = "";
            document.getElementById('contraseña').value = "";
          }
          )
          .catch((error)=>{
            console.log(error);
          });
        }
</script>
